<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="25dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical" >
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/type_track_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:columnCount="2"
        android:layout_gravity="center"
        tools:context=".GridLayoutActivity" >

        <Button
            android:id="@+id/report_monitor"
            android:layout_width="150dp"
            android:layout_column="0"
            android:background="#47525e"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#f8f9f9"
            android:text="Monitor" />

        <Button
            android:id="@+id/report_cpu"
            android:layout_width="150dp"
            android:layout_column="1"
            android:background="#47525e"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:textStyle="bold"
            android:textColor="#f8f9f9"
            android:text="Cpu" />
        <Button
            android:id="@+id/report_mouse"
            android:layout_width="150dp"
            android:layout_column="0"
            android:background="#47525e"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#f8f9f9"
            android:text="Mouse" />
        <Button
            android:id="@+id/report_keyboard"
            android:layout_width="150dp"
            android:layout_column="1"
            android:background="#47525e"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#f8f9f9"
            android:text="Keyboard" />
        <Button
            android:id="@+id/report_phone"
            android:layout_width="150dp"
            android:layout_column="0"
            android:background="#47525e"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#f8f9f9"
            android:text="Phone" />
        <Button
            android:id="@+id/report_headset"
            android:layout_width="150dp"
            android:layout_column="1"
            android:background="#47525e"
            android:layout_gravity="right|top"
            android:layout_row="2"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#f8f9f9"
            android:text="Headset" />
        <Button
            android:id="@+id/report_projector"
            android:layout_width="150dp"
            android:layout_column="0"
            android:background="#47525e"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#f8f9f9"
            android:text="Projector" />
        <Button
            android:id="@+id/report_tv"
            android:layout_width="150dp"
            android:layout_column="1"
            android:background="#47525e"
            android:layout_gravity="right|top"
            android:layout_row="3"
            android:textStyle="bold"
            android:textColor="#f8f9f9"
            android:text="TV" />
        <Button
            android:id="@+id/report_modem"
            android:layout_width="150dp"
            android:layout_column="0"
            android:background="#47525e"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#f8f9f9"
            android:text="Modem" />
        <Button
            android:id="@+id/report_printer"
            android:layout_width="150dp"
            android:layout_column="1"
            android:background="#47525e"
            android:layout_gravity="right|top"
            android:layout_row="4"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#f8f9f9"
            android:text="Printer" />
    </GridLayout>

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="Please choose specific report that you want to generate" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/report_generate_button"
                android:background="@drawable/button_bg_rounded_corners"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:clickable="true"
                android:focusable="true"
                android:text="Generate"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#e5eaef"
        />
    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/report_progressbar"
        android:layout_centerHorizontal="true"
        android:layout_gravity = "center"
        android:max="100"
        android:progress="0"
        android:indeterminate="false" />
    <LinearLayout
        android:id="@+id/pie_chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.hookedonplay.decoviewlib.DecoView
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                custom:dv_lineWidth="26dp"
                android:id="@+id/dynamicArcView"
                android:layout_gravity="center_horizontal"
                android:layout_width="280dp"
                android:layout_height="280dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:textColor="#273444"
                    android:id="@+id/total"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:textColor="#273444"
                    android:text="  total"
                    android:textSize="25dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView></LinearLayout>

        </FrameLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginRight="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle4"></ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textColor="#000000"
                                android:textSize="18dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/dispose_view"/>
                            <TextView android:text="Dispose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginRight="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle3"></ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textColor="#000000"
                                android:textSize="18dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/faulty_view"/>
                            <TextView android:text="Faulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                /></LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle2"></ImageView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView  android:textColor="#000000"
                                android:textSize="18dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/unassigned_view"/>
                            <TextView android:text="Unassign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle1"></ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView android:textColor="#000000"
                            android:textSize="18dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/assigned_view"/>
                        <TextView android:text="Assigned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"></LinearLayout>
</LinearLayout>

</ScrollView>